<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyMeasurements">
    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Banner"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner"
        >
        <TextView
            android:id="@+id/hip"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="@string/hip"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            />
        <EditText
            android:id="@+id/hipInput"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/hip"
            app:layout_constraintEnd_toStartOf="@id/waist"
            android:layout_marginStart="2dp"
            android:background="@drawable/edittextborder"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="170dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintStart_toEndOf="@id/layout1"
        >
    <TextView
        android:id="@+id/waist"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:text="@string/waist"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hip"
        />
    <EditText
        android:id="@+id/waistInput"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:inputType="number"
        android:layout_height="26dp"
        app:layout_constraintStart_toEndOf="@id/waist"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:background="@drawable/edittextborder"
        />

</LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        >
        <TextView
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hip"
            />
        <EditText
            android:id="@+id/ageInput"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/waist"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/edittextborder"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"

        >
        <TextView
            android:id="@+id/weight"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hip"
            />
        <EditText
            android:id="@+id/weightInput"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/waist"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/edittextborder"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="170dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"

        >
        <TextView
            android:id="@+id/height"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="@string/Height"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hip"
            />
        <EditText
            android:id="@+id/heightInput"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:inputType="number"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/waist"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/edittextborder"
            />

    </LinearLayout>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="320dp"
        android:layout_height="283dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/layout4" />
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/save"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:id="@+id/diary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/lightBlue"
            android:layout_margin="2dp"
            android:src="@drawable/utensils_solid_full"
            />

        <ImageButton
            android:id="@+id/bodyfat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="2dp"
            android:src="@drawable/weight_scale_solid_full"
            android:background="@color/lightBlue"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/healthinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="2dp"
            android:src="@drawable/heart_solid_full"
            android:background="@color/lightBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="2dp"
            android:src="@drawable/history"
            android:background="@color/lightBlue"
            />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="2dp"
            android:src="@drawable/user_solid_full"
            android:background="@color/lightBlue"
            app:layout_constraintTop_toBottomOf="@id/saveCalories" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>